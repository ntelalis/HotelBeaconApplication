<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clVHFoodOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBottomSheetHolderQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/tvBottomSheetHolderFoodName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvBottomSheetHolderFoodName"
            tools:text="2" />

        <TextView
            android:id="@+id/tvBottomSheetHolderMultiplyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/tvBottomSheetMultiplyLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/tvBottomSheetHolderFoodName"
            app:layout_constraintStart_toEndOf="@+id/tvBottomSheetHolderQuantity"
            app:layout_constraintTop_toTopOf="@+id/tvBottomSheetHolderFoodName" />

        <TextView
            android:id="@+id/tvBottomSheetHolderFoodName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvBottomSheetHolderPrice"
            app:layout_constraintStart_toEndOf="@+id/tvBottomSheetHolderMultiplyLabel"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Καλαμαράκια" />

        <TextView
            android:id="@+id/tvBottomSheetHolderPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/tvBottomSheetHolderFoodName"
            app:layout_constraintEnd_toStartOf="@+id/tvBottomSheetHolderCurrency"
            app:layout_constraintTop_toTopOf="@+id/tvBottomSheetHolderFoodName"
            tools:text="14" />

        <TextView
            android:id="@+id/tvBottomSheetHolderCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/tvBottomSheetCurrency"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="@+id/tvBottomSheetHolderFoodName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvBottomSheetHolderFoodName" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>