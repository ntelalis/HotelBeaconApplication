<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvUpcomingReservationsReservationID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="35" />

        <TextView
            android:id="@+id/tvUpcomingReservationsReservationIDLabel"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/upcomingReservationsReservationID"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="italic"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvUpcomingReservationsReservationID"
            app:layout_constraintEnd_toStartOf="@+id/tvUpcomingReservationsReservationID" />

        <TextView
            android:id="@+id/tvUpcomingReservationsAdults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvUpcomingReservationsAdultsLabel"
            app:layout_constraintStart_toEndOf="@+id/tvUpcomingReservationsAdultsLabel"
            tools:text="3" />

        <TextView
            android:id="@+id/tvUpcomingReservationsAdultsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tvUpcomingReservationsAdults"
            app:layout_constraintStart_toStartOf="@+id/tvUpcomingReservationsArrivalLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvUpcomingReservationsDepartureLabel" />

        <TextView
            android:id="@+id/tvUpcomingReservationsArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvUpcomingReservationsArrivalLabel"
            app:layout_constraintStart_toStartOf="@+id/tvUpcomingReservationsDeparture"
            tools:text="12-9-1985" />

        <TextView
            android:id="@+id/tvUpcomingReservationsArrivalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tvUpcomingReservationsArrival"
            app:layout_constraintStart_toStartOf="@+id/tvUpcomingReservationsRoomTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvUpcomingReservationsRoomTitle" />

        <TextView
            android:id="@+id/tvUpcomingReservationsDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvUpcomingReservationsDepartureLabel"
            app:layout_constraintStart_toEndOf="@+id/tvUpcomingReservationsDepartureLabel"
            tools:text="15-9-1986" />

        <TextView
            android:id="@+id/tvUpcomingReservationsDepartureLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/tvUpcomingReservationsDeparture"
            app:layout_constraintStart_toStartOf="@+id/tvUpcomingReservationsArrivalLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvUpcomingReservationsArrivalLabel" />

        <TextView
            android:id="@+id/tvUpcomingReservationsRoomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
            app:layout_constraintStart_toEndOf="@+id/ivUpcomingReservation"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Standard" />

        <Button
            android:id="@+id/btnUpcomingReservationsCheckInCheckOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/btnUpcomingReservationsCheckout"
            android:theme="@style/PrimaryButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvUpcomingReservationsReservationIDLabel"
            app:layout_constraintTop_toBottomOf="@+id/ivUpcomingReservation" />

        <TextView
            android:id="@+id/tvUpcomingReservationsInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/tvUpcomingReservationsInstructionsCheckOut"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnUpcomingReservationsCheckInCheckOut"
            app:layout_constraintStart_toStartOf="@+id/btnUpcomingReservationsCheckInCheckOut"
            app:layout_constraintTop_toBottomOf="@+id/btnUpcomingReservationsCheckInCheckOut" />

        <ImageView
            android:id="@+id/ivUpcomingReservation"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="?attr/colorAccent" />

        <TextView
            android:id="@+id/tvUpcomingReservationsChildrenLabel"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Children"
            app:layout_constraintStart_toStartOf="@+id/tvUpcomingReservationsAdultsLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvUpcomingReservationsAdultsLabel" />

        <TextView
            android:id="@+id/tvUpcomingReservationsChildren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0"
            app:layout_constraintBaseline_toBaselineOf="@+id/tvUpcomingReservationsChildrenLabel"
            app:layout_constraintStart_toEndOf="@+id/tvUpcomingReservationsChildrenLabel" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
