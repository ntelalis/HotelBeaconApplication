<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gpaschos_aikmpel.hotelbeaconapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:parentActivityName=".activities.LoginActivity" />
        <activity
            android:name=".activities.ForgotActivity"
            android:parentActivityName=".activities.LoginActivity" />
        <activity android:name=".activities.ForgotVerifyActivity" />
        <activity android:name=".activities.ForgotNewPassActivity" />
        <activity android:name=".activities.ReservationActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.BookActivity" />
        <activity android:name=".activities.BookConfirmationActivity" />
        <activity android:name=".activities.ViewReservationsActivity" />
        <activity android:name=".activities.RoomServiceActivity" />
        <activity android:name=".activities.UpcomingReservationActivity" />
        <activity android:name=".activities.LoadingScreenActivity" />
        <activity android:name=".activities.LoyaltyProgramActivity" />
        <activity
            android:name=".activities.CheckedInActivity"
            android:parentActivityName=".activities.UpcomingReservationActivity" />
    </application>

</manifest>